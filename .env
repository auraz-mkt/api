################################################################################
##                                   DOCKER                                   ##
################################################################################

# Prefix for all docker-compose images
COMPOSE_PROJECT_NAME="auraz"

# Docker container runtime
DOCKER_WORKDIR="/usr/src/auraz"
DOCKER_USER="auraz"
DOCKER_UID=1000
DOCKER_GID=1000

# API docker image
API_IMAGE="ghcr.io/auraz-mkt/auraz-api"
API_VERSION="dev"

################################################################################
##                                    API                                     ##
################################################################################

# API configuration
API_MODE=development
API_HOST=0.0.0.0
API_PORT=8000

# CORS configuration
API_ALLOWED_ORIGINS=["*"]
API_ALLOWED_METHODS=["*"]
API_ALLOWED_HEADERS=["*"]

################################################################################
##                                  SECURITY                                  ##
################################################################################

# ID concealing
SEC_WEBCODE_ALPHABET=abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789

################################################################################
##                                  DATABASE                                  ##
################################################################################

# Database
DB_CONNECTION=./db.json
